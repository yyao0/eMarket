<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".view.fragment.IntroTwoFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/intro_image_width"
        android:layout_height="@dimen/intro_image_height"
        android:padding="@dimen/intro_image_padding"
        app:srcCompat="@drawable/img_easy_payment" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/IntroTitleText"
        android:layout_marginTop="@dimen/intro_text_margin"
        android:text="@string/intro_easy_payment"/>




    </LinearLayout>

